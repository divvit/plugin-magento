<?xml version="1.0"?>
<config>
    <modules>
        <Divvit_Divvit>
            <version>1.0.1</version>
        </Divvit_Divvit>
    </modules>
    <global>
        <helpers>
            <divvit_divvit>
                <class>Divvit_Divvit_Helper</class>
            </divvit_divvit>
        </helpers>
        <models>
            <divvit_divvit>
                <class>Divvit_Divvit_Model</class>
            </divvit_divvit>
        </models>
    </global>
    <frontend>
        <layout>
            <updates>
                <divvit_divvit>
                    <file>divvit_divvit.xml</file>
                </divvit_divvit>
            </updates>
        </layout>
        <events>
            <checkout_cart_add_product_complete>
                <observers>
                    <divvit_divvit>
                        <type>singleton</type>
                        <class>divvit_divvit/observer</class>
                        <method>setCartData</method>
                    </divvit_divvit>
                </observers>
            </checkout_cart_add_product_complete>
            <sales_quote_remove_item>
                <observers>
                    <divvit_divvit>
                        <type>singleton</type>
                        <class>divvit_divvit/observer</class>
                        <method>setCartData</method>
                    </divvit_divvit>
                </observers>
            </sales_quote_remove_item>
            <checkout_cart_save_before>
                <observers>
                    <divvit_divvit>
                        <type>singleton</type>
                        <class>divvit_divvit/observer</class>
                        <method>emptyCart</method>
                    </divvit_divvit>
                </observers>
            </checkout_cart_save_before>
            <sales_order_place_after>
                <observers>
                    <divvit_divvit>
                        <type>singleton</type>
                        <class>divvit_divvit/observer</class>
                        <method>onSalesOrderPlaceAfter</method>
                    </divvit_divvit>
                </observers>
            </sales_order_place_after>
        </events>
    </frontend>
    <default>
        <divvit>
            <settings>
                <enabled>0</enabled>
                <merchant_site_id></merchant_site_id>
            </settings>
        </divvit>
    </default>
</config>
